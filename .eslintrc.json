{
  "env": {
    "commonjs": false,
    "es2021": true,
    "browser": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "no-plusplus": "off",
    "import/extensions": "off",
    "one-var": "off",
    "no-return-assign": "off",
    "no-param-reassign": "off",
    "no-unused-expressions": "off"
  }
}